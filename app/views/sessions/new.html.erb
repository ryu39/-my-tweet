<h1>ログイン</h1>

<% if @form.errors.full_messages.present? %>
  <ul style="color: red;">
    <% @form.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @form, url: session_path, local: true) do |f| %>
  <div>
    <%= f.label :uid %>
    <%= f.text_field :uid %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit 'ログインする' %>
<% end %>
